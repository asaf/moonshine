<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://evo.atteo.com/1.0 config.xsd">
	<jetty>
		<connectors>
			<local/>
		</connectors>
		<rewrite>
			<rules>
				<rewritePattern>
					<pattern>/alias/</pattern>
					<replacement>/hello/</replacement>
				</rewritePattern>
				<redirectPattern>
					<pattern>/redirection/</pattern>
					<location>/otherurl/</location>
				</redirectPattern>
				<rewriteRegex>
					<regex>/alias(.+)/</regex>
					<replacement>/hello$1/</replacement>
				</rewriteRegex>
				<redirectRegex>
					<regex>/redirection(.+)/</regex>
					<replacement>/otherurl$1/</replacement>
				</redirectRegex>
				<virtualHost>
					<hosts>
						<host>virtual</host>
					</hosts>
					<rules>
						<rewritePattern>
							<pattern>/virtual/</pattern>
							<replacement>/hello/</replacement>
						</rewritePattern>
					</rules>
				</virtualHost>
			</rules>
			<contextCollection>
				<context>
					<contextPath>/hello</contextPath>
					<hello>
						<message>hello</message>
					</hello>
				</context>
				<context>
					<contextPath>/hello2</contextPath>
					<hello>
						<message>hello2</message>
					</hello>
				</context>
			</contextCollection>
		</rewrite>
	</jetty>
</config>