<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://evo.atteo.com/1.0 config.xsd">
	<jetty>
		<sslcontextfactories>
			<sslcontextfactory id="sslcontextfactory">
			</sslcontextfactory>
		</sslcontextfactories>
		<connectors>
			<serverconnector>
				<provideConnectionDetails>true</provideConnectionDetails>
			</serverconnector>
			<serverconnector id="ssl">
				<connections>
					<ssl>
						<sslcontextfactory>sslcontextfactory</sslcontextfactory>
					</ssl>
					<http/>
				</connections>
				<provideConnectionDetails>true</provideConnectionDetails>
			</serverconnector>
			<local/>
		</connectors>
		<contextCollection>
			<context>
				<contextPath>/first</contextPath>
				<!-- Collection executed every handler -->
				<handlerCollection>
					<hello/>
					<!-- List stops executing when request has isHandled() to true -->
					<handlerList>
						<hello>
							<message>first</message>
						</hello>
						<hello>
							<message>second</message>
						</hello>
					</handlerList>
				</handlerCollection>
			</context>
			<context>
				<contextPath>/empty</contextPath>
				<!-- Check that empty collection works correctly -->
				<handlerCollection>
				</handlerCollection>
			</context>
		</contextCollection>
	</jetty>
</config>
